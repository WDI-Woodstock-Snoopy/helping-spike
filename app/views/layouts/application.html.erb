<!DOCTYPE html>
<html>
<head>
  <title>Kindlies</title>

<!-- responsive design -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

<!-- fonts -->
  <link href='http://fonts.googleapis.com/css?family=Overlock|Oleo+Script+Swash+Caps|Oleo+Script|Laila|Leckerli+One' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Lily+Script+One|Quicksand|Oleo+Script+Swash+Caps|Oleo+Script|Lobster|Grand+Hotel|Righteous|Damion|Leckerli+One' rel='stylesheet' type='text/css'>
<!-- backbone templates -->
  <script type='text/template' id='hand-item'>
    <div class="u-full-width" id='hand-card'>
      <div class="card-top">
        <div class="summary"><strong> <%%= title %> </strong></div>
        <span> <%%= score %> kind counts</span>
      </div>
      <div class="card-body">
      <div class="description"> <%%= message %> </div>
      <div class="img-wrapper"><img src="<%%= image %>"/></div>
      <div class="row">
        <HR>
        <button type="button" class='vote'>Inspired</button>
      </div>
    </div>
    </div>

  </script>


  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>

<span id='token' data-token="<%= form_authenticity_token %>"></span>

<div class="container">
  <%= yield %>
</div>

  <!-- javascripts -->
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>

<script>
//DECLARES TIME/DATE VARS
var today = new Date();
var hourNow = today.getHours();
var greeting;
var display = $('#greetings')

//DISPLAYS TIME-BASED GREETING TO CURRENT_USER
function heyYall(){
  if (hourNow > 18){
    greeting = 'Good Evening, ';
  } else if (hourNow > 12){
    greeting = 'Good Afternoon, ';
  } else if (hourNow > 0){
    greeting = 'Good Morning, ';
  } else {
    greeting = 'Welcome, ';
  }
  display.prepend(greeting);
}
</script>
</body>
</html>
